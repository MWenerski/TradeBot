<Window x:Class="CryptoGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crypto Trading Bot" Height="350" Width="525">
    <Grid>
        <TextBlock Text="Current Price:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="PriceTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,10,0,0" Width="200"/>
        
        <TextBlock Text="Status:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <TextBox Name="StatusTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,50,0,0" Width="200" IsReadOnly="True"/>
        
        <Button Content="Start Trading" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0" Width="100" Click="StartTrading_Click"/>
        <Button Content="Stop Trading" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,90,0,0" Width="100" Click="StopTrading_Click"/>
    </Grid>
</Window>
